/* components/MsgBox/MsgBox.wxss */
.forbid{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  z-index: 2000;
  background:rgba(0,0,0,.3);
}
.thanks{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  top:252rpx;
}
.close{
  width:589rpx;
  text-align: right;
}
.close>image{
  width: 72rpx;
	height: 72rpx;
}
.item{
  width: 589rpx;
	height: 487rpx;
	border-radius: 19rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item>image{
  width:100%;
  height:100%;
}
.know{
  position: absolute;
  width: 360rpx;
	height: 72rpx;
	border-radius: 36rpx;
	border: solid 1rpx #ff3300;
	font-family: PingFang-SC-Medium;
	font-size: 36rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 72rpx;
	color: #ff3300;
  text-align: center;
  bottom:60rpx;
}
.wow{
  position: relative;
  top:112rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.award-item{
  width: 589rpx;
	height: 767rpx;
	border-radius: 19rpx;
}
.award-item>image{
  width:100%;
  height:100%;
}
.award-msg{
  position: absolute;
  top:249rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.award-img{
  width: 180rpx;
	height: 180rpx;
	background-color: #ffffff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.award-img>image{
  width: 80%;
  height:80%;
}
.award-name{
  margin-top:16rpx;
	font-family: DINPro-Bold;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	color: #ffffff;
}
.get{
  position: absolute;
  bottom:60rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.get-msg{
	font-family: PingFang-SC-Bold;
	font-size: 36rpx;
	font-weight: normal;
	font-stretch: normal;
	color: #000000;
}
.get>image{
  margin-top:59rpx;
  width: 360rpx;
	height: 72rpx;
}