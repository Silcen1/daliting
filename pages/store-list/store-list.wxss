/* pages/class-list/class-list.wxss */
page{
  height: 100%;
  width: 100%;
}
.share{
  display: flex;
  justify-content: center;
  padding-top: 30rpx;
  height: 10%;
  padding-right: 30rpx;
  padding-left: 30rpx;
}
.share-nav{
  width: 690rpx;
	height: 64rpx;
	background-color: #fafafa;
	border-radius: 32rpx;
  display: flex;
  align-items: center;
  padding-left: 33rpx;
}
.share-icon{
  	width: 40rpx;
}
.open{
  width: 55rpx;
  border-left: 1rpx solid #eee;
  padding-left: 19rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  margin-left: 17rpx;
}
.share-icon-open{
  width: 22rpx;
}
.placeholder{
  font-family: PingFang-SC-Regular;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 38rpx;
	letter-spacing: 1px;
	color: #999999;
  flex: 1;
}
.search-btn{
  font-family: PingFang-SC-Medium;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 60rpx;
	letter-spacing: 0px;
	color: #ffffff;
  width: 120rpx;
  text-align: center;
	height: 60rpx;
	background-color: #ff3300;
	border-radius: 10rpx;
  margin-left: 30rpx;
}

.class-box{
  display: flex;
  justify-content: center;
  font-family: PingFang-SC-Regular;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #262626;
  height: 70%;
  align-items: center;
}



.list-store-box{
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  border-bottom: 10rpx;
}
.list-items{
  width: 330rpx;
  	background-color: #ffffff;
	box-shadow: 1px 1px 16px 0px 
		rgba(0, 0, 0, 0.05);
	border-radius: 8px;
  padding-bottom: 15rpx;
}
.list-items>image{
  	width: 330rpx;
}
.list-items{
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}
.list-items>text{

	font-family: PingFang-SC-Medium;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 30rpx;
	letter-spacing: 0px;
	color: #000000;
  margin-top: 17rpx;
}
.other-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 29rpx;
  padding-left: 13rpx;
  padding-right: 13rpx;
}


.other-info>text{
  font-family: PingFang-SC-Regular;
	font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #999999;
}
.other-info>view{
  font-family: DINPro-Regular;
	font-size: 20rpx;
	font-weight: normal;
	letter-spacing: 0px;
	color: #cccccc;
  
}
.other-info .noney{
  font-family: DINPro-Medium;
	font-size: 30rpx;
	font-weight: normal;
	letter-spacing: 0px;
	color: #ff3300;
  margin-right: 23rpx;
}

