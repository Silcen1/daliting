/* 上传图片 */
.ui_uploader_cell{
  display: flex;
  justify-content: flex-start;
  flex-wrap:wrap;
  width:100%;
  height:100%;
  margin-bottom:20rpx;
  /* position: absolute;
  top:160rpx; */
}
.ui_uploader{
  width: 24%;
	height: 160rpx;
	border-radius: 10px;
  margin: 8rpx 0;
	border: solid 1px #eeeeee;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ui_uploader image{
  width:88%;
  height:88%;
}
.ui_uploader_item{
  width:24%;
  height:160rpx;
  margin: 8rpx 0;
  border-radius: 10px;
 	border: solid 1px #eeeeee;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.ui_uploader_item  image{
 border-radius: 10rpx;
 width:90%;
 height:90%;
}
.ui_uploader_item_icon{
 position: absolute;
 top:0;
  left:110rpx;
  width:5rpx;
  height:5rpx;
}
.select-btn{
	font-family: PingFang-SC-Medium;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}
.select-btn>view{
  width: 690rpx;
	height: 88rpx;
	background-color: #ff3300;
	border-radius: 10rpx;
  text-align: center;
  line-height: 88rpx;
}