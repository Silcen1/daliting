/* pages/evaluate/evaluate.wxss */
page{
  background-color: #fafafa;
}
.tops{
  min-height: 70rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
	background-color: #ffffff;
	border: solid 1px #eeeeee;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tops>image{
  	width: 64rpx;
}
.tops>text{
  font-family: PingFang-SC-Medium;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 30rpx;
	letter-spacing: 0px;
	color: #000000;
  padding-left: 16rpx;
  display: inline-block;
  width: 593rpx;
}
.send-message{
  display: flex;
  justify-content: center;
  margin:0 30rpx;
  margin-top: 30rpx;
  position: relative;
}
.length{
  position: absolute;
  font-family: PingFang-SC-Regular;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
  top:2%;
  right:2%;
}
.send{
  width: 690rpx;
	height: 100%;
	background-color: #ffffff;
	box-shadow: 1px 1px 16rpx 0px 
		rgba(0, 0, 0, 0.05);
	border-radius: 10rpx;
  padding-left: 30rpx;
  padding-top: 30rpx;
  padding-right: 30rpx;
}
.send textarea{
  height: 100rpx;
  margin-bottom:20rpx;
}
.placeholder{
  font-family: PingFang-SC-Regular;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #999999;
  width: 100%;
}
