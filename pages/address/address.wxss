/* pages/address/address.wxss */
page{
  background-color: #fafafa;
  display: flex;
  justify-content: center;
  padding-top: 30rpx;
  flex-wrap: wrap;
  padding-bottom: 100rpx;
}
.address-list{
  display: flex;
  width: 690rpx;
	height: 200rpx;
	background-color: #ffffff;
	box-shadow: 1rpx 1rpx 16rpx 0px 
		rgba(0, 0, 0, 0.05);
	border-radius: 8rpx;
  margin-bottom: 30rpx;
}
.item-list{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 30rpx;
}
.item-list>image{
  	width: 40rpx;
}
.item-list>text{
  font-family: PingFang-SC-Regular;
	font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ff3300;
  margin-top: 13rpx;
}
.messages{
  flex: 1;
  padding-left: 30rpx;
}
.messages>text{
  	font-family: PingFang-SC-Medium;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #000000;
  display: inline-block;
  margin-top: 37rpx;
}
.messages>view{
  	font-family: PingFang-SC-Regular;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
  border-right: 1rpx solid #eee;
  padding-right:22rpx;
  padding-top: 29rpx;
}
.user_name{
  margin-right: 30rpx;
}
.edit-menu{
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
  align-items: center;
  justify-content: center;
  width: 110rpx;
}
.edit-menu>image{
  	width: 20rpx;
    position: absolute;
    top: 16rpx;
    right: 16rpx;
}
.edit-menu>text{
  font-family: PingFang-SC-Regular;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ff3300;
}
.edit-btns{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 88rpx;
	background-color: #ff3300;
	box-shadow: 1px 1px 16rpx 0px 
		rgba(0, 0, 0, 0.05);
  text-align: center;
  line-height: 88rpx;
  font-family: PingFang-SC-Medium;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 3px;
	color: #ffffff;
}
.select-top{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.select-tops{
  font-family: PingFang-SC-Regular;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 38rpx;
	letter-spacing: 0px;
	color: #333333;
  text-align: center;
  margin-top: 30rpx;
}
.btns{
  width: 160rpx;
	height: 64rpx;
	border-radius: 32rpx;
  font-family: PingFang-SC-Medium;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 64rpx;
	letter-spacing: 0px;
	color: #ff3300;
  text-align: center;
	border: solid 1px #ff3300;
  margin-top: 60rpx;
}