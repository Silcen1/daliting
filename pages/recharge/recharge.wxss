/* pages/recharge/recharge.wxss */
page{
  background-color: #fafafa;
  padding-top: 30rpx;
}
.box{
  display: flex;
  justify-content: center;
}
.box-money{
  width: 690rpx;
	height: 355rpx;
	background-color: #ffffff;
	box-shadow: 1rpx 1rpx 16rpx 0px 
		rgba(0, 0, 0, 0.05);
	border-radius: 10rpx;
}
.box-money>text{
  	font-family: PingFang-SC-Medium;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 60rpx;
	letter-spacing: 0px;
	color: #333333;
  margin-left: 30rpx;
  display: inline-block;
  margin-top: 30rpx;
}
.money-munber{
  font-family: DINPro-Medium;
	font-size: 60rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 60rpx;
	letter-spacing: 0px;
	color: #000000;
  border-bottom: 1px solid #eee;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-left: 60rpx;
}
.money-box{
  position: relative;
  margin-top: 60rpx;
}
.money-box>text{
  position: absolute;
  top: 0;
  left: 30rpx;
}

.select-btn{
 display: flex;
 justify-content: center;
}
.select-btns{
  width: 630rpx;
	height: 88rpx;
	background-color: #ff3300;
	border-radius: 44rpx;
  margin-top: 30rpx;
  font-family: PingFang-SC-Medium;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 88rpx;
	letter-spacing: 0px;
	color: #ffffff;
  text-align: center;
}