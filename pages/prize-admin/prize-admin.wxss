page{
  background-color: #ff513c;
}
.top{
  position: relative;
}
.list{
  position: absolute;
  right: 0;
  top: 45rpx;
}
.crul{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 50rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.crul_rule{
  padding-top:60rpx;
	font-family: PingFang-SC-Medium;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	color: #ffffff;
}

.container-out {
  height: 600rpx;
  width: 650rpx;
  background-color: #ffd905;
  margin: 0rpx auto;
  border-radius: 40rpx;
  box-shadow:0px 7px 5px 0px 
		rgba(177, 55, 0, 0.64);
  position: relative;
  top:0;
}

.container-in {
  width: 580rpx;
  height: 530rpx;
  background-color: #f49804;
  border-radius: 40rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

/**小圆球
box-shadow: inset 3px 3px 3px #fff2af;*/

.circle {
  position: absolute;
  display: block;
  border-radius: 50%;
  height: 20rpx;
  width: 20rpx;
}

.content-out {
  position: absolute;
  height: 150rpx;
  width: 166.6666rpx;
  background-color: #f5f0fc;
  border-radius: 15rpx;
}

/**居中 加粗*/

.start-btn {
  position: absolute;
  margin: auto;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  border-radius: 15rpx;
  height: 150rpx;
  width: 166.6666rpx;
  text-align: center;
  font-size: 55rpx;
  font-weight: bolder;
  line-height: 150rpx;
}
.start-btn>image{
  width:100%;
  height: 100%;
}

.award-image {
  position: absolute;
  margin: auto;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width:80%;
  height:80%;
}