<!--pages/store-info/store-info.wxml-->
<view class='tops'>
  <image src='../../images/tops.png' mode='widthFix'></image>
</view>


<view class='store-infos'>
    <view class='hot-nav'>
        <text class='old-new'>￥688</text>
         <text class='old-money'>￥1688</text>
         <image src='../../images/hot.png' mode='widthFix' class='hot'></image>
    </view>
    <view class='text-message'>创意实用闺蜜特别的浪漫小圣诞节暖手宝充电宝</view>
    <view class='message-box'>充电宝 暖手宝 两用 浪漫萌宠送女生送温暖</view>
    <view class='box-select'>
        <text>已售152件</text>
        <text>广东广州</text>
    </view> 
</view>

<view class='count'>

  <view class='count-nav'>

        <view class='select-text'>
            <text>已选</text>
            <text class='select-default'>默认</text>
        </view>

        <image src='../../images/more-user.png' mode='widthFix' ></image>
  </view>

   <view class='count-nav'>

        <view class='select-text'>
            <text>数量</text>
            <view class='select-counts'> 
              <image src='../../images/nuadd.png' mode='widthFix'></image>
              <view class='select-number'>
              1
              </view>
              <image src='../../images/add.png'  mode='widthFix'></image>
            </view>
        </view>

       <view>库存：300件</view>
  </view>

</view>

<view class='select-click'>

  <view class=" {{showinfo == 'true'?'selectclick select-item':' select-item' }}" catchtap='selectBtn' data-select='true'>
      商品介绍
  </view>

   <view class=" {{showinfo == 'false'?'selectclick select-item':' select-item' }}"  catchtap='selectBtn' data-select='false'>
      用户评价
  </view>


</view>

