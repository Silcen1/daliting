/* pages/coupon/coupon.wxss */
page{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  height: 100%;
  width: 100%;
}
.coupon-none{
  margin-top:35%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.get-btn{
  width: 160rpx;
	height: 64rpx;
	border-radius: 32rpx;
	border: solid 1rpx #ff3300;
  font-family: PingFang-SC-Medium;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 64rpx;
	letter-spacing: 0px;
	color: #ff3300;
  text-align: center;
  margin-top: 60rpx;
}
.tips{
  font-family: PingFang-SC-Regular;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 60rpx;
	letter-spacing: 0px;
	color: #333333;
  margin-top: 5rpx;
}
.selec-imgs{
  width: 330rpx;
}

.item-conter{
  width: 690rpx;
  height: 214rpx;
  background-color: #ffffff;
  box-shadow: 1px 1px 16rpx 0px 
  rgba(0, 0, 0, 0.05);
  border-radius: 25rpx;
  margin-top: 30rpx;
}
.item-conter{
  position: relative;
}
.item-conter>image{
  width: 100%;
  position: absolute;
  top: 0;
}
.itme-list{
  display: flex;
  height: 100%;
  align-items: center;
  padding-right: 30rpx;
}

.contes{
  flex: 1;
  height: 100%;
  padding-left: 30rpx;
}
.money{
  font-family: PingFang-SC-Medium;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #cccccc;
  margin-top: 44rpx;
}
.store-name{
	font-family: PingFang-SC-Medium;
	font-size: 22rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #cccccc;
  margin-top: 15rpx;
}
.store-name>text{
  color: #ff3300;

}
.money-text{
  font-family: DINPro-Medium;
	font-size: 40rpx;
	font-weight: normal;
	letter-spacing: 0px;
	color: #ff3300;
  display: inline-block;
  padding-right: 17rpx;
}