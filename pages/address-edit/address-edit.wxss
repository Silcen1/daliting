/* pages/address-add/address-add.wxss */
.add{
  margin-left: 30rpx;
  margin-right: 30rpx;

}
.list-inputs{
  display: flex;
  min-height: 88rpx;
  align-items: center;
    border-bottom: 1px solid #eeeeee;
}
.list-inputs>text{
  display: inline-block;
  width: 200rpx;
  font-family: PingFang-SC-Medium;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #000000;
}
.list-inputs>image{
  width: 12rpx;
}
.placeholder{
  font-family: PingFang-SC-Regular;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #cccccc;
}
.placeholder-picker{
  flex: 1;
  font-family: PingFang-SC-Regular;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #cccccc;
}
.pickers{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding-top: 30rpx;
}
.placeholder-input{
  margin-top: 19rpx;
}
.submit{
  position:fixed;
  bottom:0;
  height: 88rpx;
  text-align: center;
	background-color: #ff3300;
  width:100%;
	font-family: PingFang-SC-Medium;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 88rpx;
	letter-spacing: 3rpx;
	color: #ffffff;
}