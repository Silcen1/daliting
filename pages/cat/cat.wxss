/* pages/class-list/class-list.wxss */
page{
  height: 100%;
  width: 100%;
}
.share{
  display: flex;
  justify-content: center;
  padding-top: 30rpx;
  height: 10%;
}
.share-nav{
  width: 690rpx;
	height: 64rpx;
	background-color: #fafafa;
	border-radius: 32rpx;
  display: flex;
  align-items: center;
  padding-left: 33rpx;
}
.share-icon{
  	width: 40rpx;
}
.open{
  width: 55rpx;
  border-left: 1rpx solid #eee;
  padding-left: 19rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  margin-left: 17rpx;
}
.share-icon-open{
  width: 22rpx;
}
.placeholder{
  font-family: PingFang-SC-Regular;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 38rpx;
	letter-spacing: 1px;
	color: #999999;
}
.show{
  display: flex;
  height: 87%;
  overflow: hidden;
}
.scroll-view{
  height: 100%;
  overflow: hidden;
}
.class-list{
  width: 152rpx;
  background-color: #fafafa;
  height: 100%;
}
.select-items{
  font-family: PingFang-SC-Medium;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
	color: #000000;
}
.class-infos>text{
  font-family: PingFang-SC-Bold;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 38rpx;
	letter-spacing: 0px;
	color: #000000;
  padding-left: 31rpx;
}
.class-infos{
  flex: 1;
}
.sub-scroll-view{
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.sub-items{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 176rpx;
  margin-top: 40rpx;
}
.sub-items>image{
  width: 140rpx;
}
.sub-items>text{
  font-family: PingFang-SC-Medium;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 38rpx;
	letter-spacing: 0px;
	color: #999999;
  text-align: center;
  margin-top: 14rpx;
}
.sub-scroll-view-box{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 50rpx;
}
.select-btn{
  background-color: #ffffff;
  color: #ff3300;
}